RewriteEngine on

# Login
RewriteRule   ^add$    		    index.php  [NC]
RewriteRule   ^add/$    		index.php  [NC]
RewriteRule   ^edit$    		edit.php  [NC]
RewriteRule   ^edit/$    		edit.php  [NC]
RewriteRule   ^delete$    		delete.php  [NC]
RewriteRule   ^delete/$    		delete.php  [NC]
RewriteRule   ^list$    		list.php  [NC]
RewriteRule   ^list/$    		list.php  [NC]
RewriteRule   ^xml$    		    xml.php  [NC]
RewriteRule   ^xml/$    		xml.php  [NC]

# Security
    Header add Content-Security-Policy "default-src 'self' ; style-src 'self'; font-src 'self'; object-src 'self'; "

   <IfModule mod_headers.c>
    	 Header set X-XSS-Protection "1; mode=block"
    	 Header always append X-Frame-Options SAMEORIGIN
    	 Header set X-Content-Type-Options nosniff
   </IfModule>
